{% block form_row %}
{% spaceless %}
    <div>
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}


{% block form_errors %}
{% spaceless %}
    <ul id="{{ id }}_errors">
    {% if errors|length > 0 %}
        {% for error in errors %}
            <li data-constraint="{{ constraint_name(form, error.message) }}">{{ error.message }}</li>
        {% endfor %}
    {% endif %}
    </ul>
{% endspaceless %}
{% endblock form_errors %}
